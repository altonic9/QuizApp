<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVbox" alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="30.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.questionCreationController">
   <HBox alignment="CENTER" spacing="30.0">
      <children>
         <Label text="Question" />
         <TextField fx:id="questionTxt" />
      </children>
   </HBox>
   <HBox alignment="CENTER" spacing="30.0">
      <children>
         <Label text="Type" />
         <ComboBox fx:id="typeComboBox" onAction="#onChangeTypeComboBox" prefWidth="150.0" />
      </children>
   </HBox>

</VBox>
