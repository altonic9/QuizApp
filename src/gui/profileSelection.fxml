<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ProfileSelectionController">
   <center>
      <HBox fx:id="menuHbox" alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="434.0" prefWidth="180.0" spacing="30.0">
               <Label text="Hallo!" />
               <Button mnemonicParsing="false" onAction="#onCreateUser" prefHeight="70.0" prefWidth="150.0" text="Create New User">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" onAction="#onLoadProfile" prefHeight="70.0" prefWidth="150.0" text="Load User">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" onAction="#exit" prefWidth="60.0" text="back" />
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <MenuBar>
            <Menu mnemonicParsing="false" text="File">
               <MenuItem mnemonicParsing="false" onAction="#openEditor" text="Start Editor" />
               <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </Menu>
            <Menu mnemonicParsing="false" text="Profile">
               <MenuItem mnemonicParsing="false" onAction="#openProfileManagment" text="Profile Managment" />
               <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </Menu>
         </MenuBar>
         <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="80.0" prefWidth="600.0" text="QuizApp" textAlignment="CENTER">
            <font>
               <Font size="50.0" />
            </font>
         </Label>
      </VBox>
   </top>
   <left>
      <Pane prefHeight="574.0" prefWidth="160.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="574.0" prefWidth="160.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane prefHeight="30.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
