<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ProfileSelectionController">
   <center>
      <HBox fx:id="menuHbox" alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="395.0" prefWidth="180.0" spacing="30.0">
               <Button mnemonicParsing="false" onAction="#onCreateUser" prefHeight="70.0" prefWidth="170.0" text="Create New Profile">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" onAction="#onLoadProfile" prefHeight="70.0" prefWidth="170.0" text="Select existing Profile">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Button>
            </VBox>
         </children>
      </HBox>
   </center>
   <left>
      <Pane prefHeight="574.0" prefWidth="160.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="574.0" prefWidth="160.0" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="80.0" prefWidth="600.0" text="Profile Selection" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="60.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#exit" prefWidth="60.0" text="back">
               <HBox.margin>
                  <Insets bottom="20.0" right="40.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
